{
  "prettier.enable": false,
  "editor.formatOnSave": false,

  "eslint.useFlatConfig": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "json5",
    "jsonc",
    "yaml",
    "toml",
    "xml"
  ],
  "stylelint.validate": [
    "css",
    "less",
    "scss",
    "sass",
    "postcss",
    "vue"
  ]
}