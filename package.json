{
  "name": "kite-nest",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "demo-webgl:dev": "cd apps/demo-webgl && vite",
    "ui:test": "pnpm -r run test --filter @kite-nest/ui",
    "shared:test": "pnpm -r run test --filter @kite-nest/shared",
    "prepare": "husky",
    "lint": "eslint --cache --fix .",
    "prettify": "prettier --cache --ignore-unknown --write ."
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{js,mjs.cjs,ts,mts,cts,jsx,tsx}": [
      "pnpm lint",
      "pnpm prettify"
    ],
    "{!(package)*.json,*.code-snippets,.!({browserslist,npm,nvm})*rc}": [
      "prettier --cache --write --parser json"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "package.json": [
      "prettier --cache --write"
    ],
    "*.vue": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.{css,scss,html}": [
      "prettier --cache --ignore-unknown --write"
    ],
    "*.md": [
      "prettier --cache --ignore-unknown --write"
    ]
  },
  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.7.0",
    "commitlint": "^19.7.1",
    "cz-git": "^1.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "sass": "^1.83.4",
    "sass-embedded": "^1.83.4",
    "typescript": "~5.6.2",
    "unplugin-vue-define-options": "^1.5.5",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.5.0",
    "vue-tsc": "^2.2.0"
  }
}
